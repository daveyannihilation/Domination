<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DeskClock" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:buttonStyle">?android:borderlessButtonStyle</item>
        <item name="android:windowBackground">@*org.omnirom.deskclock:color/window_background</item>
        <item name="android:actionBarStyle">@*org.omnirom.deskclock:style/ActionBarStyle</item>
        <item name="android:dialogTheme">@*org.omnirom.deskclock:style/DialogTheme</item>
        <item name="android:alertDialogTheme">@*org.omnirom.deskclock:style/DialogTheme</item>
        <item name="android:colorControlActivated">@*org.omnirom.deskclock:color/primary</item>
        <item name="android:colorPrimary">@*org.omnirom.deskclock:color/primary</item>
        <item name="android:colorPrimaryDark">@*org.omnirom.deskclock:color/primary_dark</item>
        <item name="android:colorAccent">@*org.omnirom.deskclock:color/primary</item>
        <item name="android:navigationBarColor">@*org.omnirom.deskclock:color/primary_dark</item>
        <item name="*org.omnirom.deskclock:secondaryPrimary">@*org.omnirom.deskclock:color/secondary_primary</item>
    </style>

    <style name="ActionBarStyle" parent="@*android:style/Widget.Material.ActionBar">
        <item name="android:background">@*org.omnirom.deskclock:color/primary</item>
        <item name="android:popupTheme">@*org.omnirom.deskclock:style/ActionBarPopupTheme</item>
    </style>

    <style name="ActionBarPopupTheme" parent="@*android:style/Widget.Material">
        <item name="android:colorBackground">@*org.omnirom.deskclock:color/primary</item>
    </style>

    <style name="DialogTheme" parent="@*android:style/Theme.Material.Dialog">
        <item name="android:windowBackground">@*org.omnirom.deskclock:color/window_background</item>
        <item name="android:colorPrimary">@*org.omnirom.deskclock:color/primary</item>
        <item name="android:colorPrimaryDark">@*org.omnirom.deskclock:color/primary_dark</item>
        <item name="android:colorAccent">@*org.omnirom.deskclock:color/primary</item>
    </style>
</resources>
