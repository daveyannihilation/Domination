<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.AppCompat" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="NavigationDrawerItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:clickable">false</item>
    </style>


    <style name="DatePickerDialogTheme" parent="@*com.google.android.apps.playconsole:style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:windowMinWidthMajor">79.99999%</item>
        <item name="android:windowMinWidthMinor">79.99999%</item>
        <item name="*com.google.android.apps.playconsole:colorAccent">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.playconsole:colorControlNormal">@*android:color/white</item>
        <item name="*com.google.android.apps.playconsole:colorControlActivated">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.playconsole:textColorAlertDialogListItem">@*android:color/white</item>
    </style>
    <style name="FlatButtonStyle" parent="@*com.google.android.apps.playconsole:style/Widget.AppCompat.Button">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@*com.google.android.apps.playconsole:color/screen_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PlayCardAction">
        <item name="android:textSize">@*com.google.android.apps.playconsole:dimen/card_subtitle_font_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">@*com.google.android.apps.playconsole:string/medium_font_family</item>
    </style>
    <style name="PlayCardSubtitle_BoldColor">
        <item name="android:textSize">@*com.google.android.apps.playconsole:dimen/card_subtitle_font_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">@*com.google.android.apps.playconsole:string/medium_font_family</item>
    </style>
    <style name="PlayCardTitle_Color">
        <item name="android:textSize">@*com.google.android.apps.playconsole:dimen/card_title_font_size</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="PlayNumber">
        <item name="android:textSize">@*com.google.android.apps.playconsole:dimen/big_number_font_size</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="ReviewFilterSpinnerStyle">
        <item name="android:background">@*com.google.android.apps.playconsole:drawable/spinner_bg</item>
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="SettingsButtonStyle" parent="@*com.google.android.apps.playconsole:style/Widget.AppCompat.Button">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@*com.google.android.apps.playconsole:color/screen_background</item>
        <item name="android:paddingLeft">@*com.google.android.apps.playconsole:dimen/card_padding</item>
        <item name="android:paddingRight">@*com.google.android.apps.playconsole:dimen/card_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0.0dip</item>
    </style>
    <style name="Base.AppTheme" parent="@*com.google.android.apps.playconsole:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionModeBackground">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.apps.playconsole:windowActionModeOverlay">true</item>
        <item name="*com.google.android.apps.playconsole:colorPrimary">@*android:color/primary_material_dark</item>
        <item name="*com.google.android.apps.playconsole:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
        <item name="*com.google.android.apps.playconsole:colorAccent">@*com.google.android.apps.playconsole:color/accent</item>
        <item name="*com.google.android.apps.playconsole:colorControlActivated">@*com.google.android.apps.playconsole:color/primary</item>
        <item name="*com.google.android.apps.playconsole:colorButtonNormal">@*android:color/button_material_dark</item>
        <item name="*com.google.android.apps.playconsole:buttonStyle">@*com.google.android.apps.playconsole:style/AppButtonStyle</item>
        <item name="*com.google.android.apps.playconsole:labeledInfoStyle">@*com.google.android.apps.playconsole:style/Widget.LabeledInfo</item>
        <item name="*com.google.android.apps.playconsole:statusBarStyle">@*com.google.android.apps.playconsole:style/Widget.StatusBar</item>
        <item name="*com.google.android.apps.playconsole:actionModeStatusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="*com.google.android.apps.playconsole:actionModeLightStatusBar">false</item>
    </style>
    <style name="ReviewFilterDialogTheme" parent="@*android:style/Theme.Material.Dialog">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">100.0%</item>
        <item name="android:windowMinWidthMinor">100.0%</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="Base.Widget.AppCompat.ActionBar.Solid" parent="@*com.google.android.apps.playconsole:style/Base.Widget.AppCompat.ActionBar">
        <item name="background">@*android:color/primary_material_dark</item>
        <item name="backgroundStacked">@*android:color/primary_material_dark</item>
        <item name="backgroundSplit">@*android:color/primary_material_dark</item>
    </style>
    <style name="Base.Widget.AppCompat.Light.ActionBar.Solid" parent="@*com.google.android.apps.playconsole:style/Base.Widget.AppCompat.Light.ActionBar">
        <item name="background">@*android:color/primary_material_dark</item>
        <item name="backgroundStacked">@*android:color/primary_material_dark</item>
        <item name="backgroundSplit">@*android:color/primary_material_dark</item>
    </style>
    <style name="Base.Widget.Design.AppBarLayout" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/primary_material_dark</item>
    </style>


    <style name="ActionButtonStyle" parent="@*com.google.android.apps.playconsole:style/Widget.AppCompat.Button">
        <item name="android:paddingLeft">@*com.google.android.apps.playconsole:dimen/button_padding</item>
        <item name="android:paddingRight">@*com.google.android.apps.playconsole:dimen/button_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@*com.google.android.apps.playconsole:dimen/button_min_width</item>
        <item name="*com.google.android.apps.playconsole:colorButtonNormal">@*android:color/button_material_dark</item>
    </style>

</resources>
