<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light" />

    <style name="CardViewStyle.Dark" parent="@*com.topjohnwu.magisk:style/CardView">
        <item name="*com.topjohnwu.magisk:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="CardViewStyle.Light" parent="@*com.topjohnwu.magisk:style/CardView">
        <item name="*com.topjohnwu.magisk:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="AppTheme" parent="@*com.topjohnwu.magisk:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="*com.topjohnwu.magisk:cardStyle">@*com.topjohnwu.magisk:style/CardViewStyle.Dark</item>
        <item name="*com.topjohnwu.magisk:colorAccent">@*com.topjohnwu.magisk:color/accent</item>
        <item name="*com.topjohnwu.magisk:colorAccentFallback">@*com.topjohnwu.magisk:color/accentFallback</item>
        <item name="*com.topjohnwu.magisk:colorPrimary">@*com.topjohnwu.magisk:color/primary</item>
        <item name="*com.topjohnwu.magisk:colorPrimaryDark">@*com.topjohnwu.magisk:color/primary_dark</item>
        <item name="*com.topjohnwu.magisk:imageColorTint">@*android:color/white</item>
        <item name="*com.topjohnwu.magisk:windowActionBar">false</item>
        <item name="*com.topjohnwu.magisk:windowActionModeOverlay">true</item>
        <item name="*com.topjohnwu.magisk:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Dark" parent="@*com.topjohnwu.magisk:style/Theme.AppCompat.NoActionBar">
        <item name="android:textColorSecondary">@*com.topjohnwu.magisk:color/dark_secondary_text</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="*com.topjohnwu.magisk:cardStyle">@*com.topjohnwu.magisk:style/CardViewStyle.Dark</item>
        <item name="*com.topjohnwu.magisk:colorAccent">@*com.topjohnwu.magisk:color/accent</item>
        <item name="*com.topjohnwu.magisk:colorAccentFallback">@*com.topjohnwu.magisk:color/accentFallback</item>
        <item name="*com.topjohnwu.magisk:imageColorTint">@*android:color/white</item>
        <item name="*com.topjohnwu.magisk:windowActionBar">false</item>
        <item name="*com.topjohnwu.magisk:windowActionModeOverlay">true</item>
        <item name="*com.topjohnwu.magisk:windowNoTitle">true</item>
    </style>


    <style name="SplashTheme" parent="@*com.topjohnwu.magisk:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@*com.topjohnwu.magisk:drawable/ic_splash_activity</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowShowWallpaper">false</item>
    </style>
</resources>
