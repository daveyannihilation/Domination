<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BugleCameraActivityTheme" parent="@*com.google.android.apps.messaging:style/BugleToolbarTheme">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
    </style>
    <style name="BugleTheme.HomeActivity" parent="@*com.google.android.apps.messaging:style/BugleToolbarTheme.Lockup">
        <item name="android:windowBackground">@*android:color/background_dark</item>
    </style>
    <style name="MediaViewerActivityTheme" parent="@*com.google.android.apps.messaging:style/BugleToolbarTheme">
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
    </style>
    <style name="PhotoViewTheme" parent="@*com.google.android.apps.messaging:style/Theme.AppCompat">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="*com.google.android.apps.messaging:windowActionBarOverlay">true</item>
        <item name="*com.google.android.apps.messaging:actionBarStyle">@*com.google.android.apps.messaging:style/AppCompat.ActionBar</item>
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
    </style>
    <style name="RecipientEditTextViewBase">
        <item name="android:textAppearance">?*android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@*com.google.android.apps.messaging:dimen/chip_height</item>
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="Widget.GoogleMaterial.Snackbar" parent="@*com.google.android.apps.messaging:style/Widget.MaterialComponents.Snackbar">
        <item name="*com.google.android.apps.messaging:actionTextColorAlpha">@*com.google.android.apps.messaging:dimen/design_snackbar_action_text_color_alpha</item>
        <item name="*com.google.android.apps.messaging:backgroundTint">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.apps.messaging:enforceMaterialTheme">true</item>
        <item name="*com.google.android.apps.messaging:materialThemeOverlay">@*com.google.android.apps.messaging:style/ThemeOverlay.GoogleMaterial.Snackbar</item>
    </style>
    <style name="Widget.GoogleMaterial.Snackbar.TextView" parent="@*com.google.android.apps.messaging:style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@*android:color/white</item>
    </style>
    <style name="Widget.MaterialComponents.Snackbar.TextView" parent="@*com.google.android.apps.messaging:style/Widget.AppCompat.TextView">
        <item name="android:textAppearance">@*com.google.android.apps.messaging:style/TextAppearance.GoogleMaterial.Body2</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@*com.google.android.apps.messaging:dimen/design_snackbar_padding_horizontal</item>
        <item name="android:paddingTop">@*com.google.android.apps.messaging:dimen/design_snackbar_padding_vertical</item>
        <item name="android:paddingRight">@*com.google.android.apps.messaging:dimen/design_snackbar_padding_horizontal</item>
        <item name="android:paddingBottom">@*com.google.android.apps.messaging:dimen/design_snackbar_padding_vertical</item>
        <item name="android:maxLines">@*com.google.android.apps.messaging:integer/design_snackbar_text_max_lines</item>
        <item name="android:alpha">@*com.google.android.apps.messaging:dimen/material_emphasis_high_type</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>
