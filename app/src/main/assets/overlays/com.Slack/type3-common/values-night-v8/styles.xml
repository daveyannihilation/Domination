<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AgendaButton.Light" parent="@*com.Slack:style/AgendaButton">
        <item name="android:textColor">@*android:color/white</item>
        <item name="*com.Slack:backgroundTint">@*android:color/button_material_dark</item>
        <item name="*com.Slack:colorControlHighlight">@*com.Slack:color/sk_lilypad_green</item>
        <item name="*com.Slack:strokeColor">@*android:color/white</item>
        <item name="*com.Slack:strokeWidth">1.0dip</item>
    </style>
    <style name="CounterText" parent="@*com.Slack:style/TextAppearance.Design.Counter.Overflow">
        <item name="android:textSize">@*com.Slack:dimen/app_dialog_text_size_small</item>
        <item name="android:textColor">@*android:color/secondary_text_default_material_dark</item>
        <item name="android:fontFamily">@*com.Slack:font/lato_regular</item>
    </style>
    <style name="NoActionBarActivityTheme" parent="@*com.Slack:style/Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:fontFamily">@*com.Slack:font/lato_family</item>
        <item name="*com.Slack:actionModeBackground">@*android:color/background_floating_material_dark</item>
        <item name="*com.Slack:actionModeCloseDrawable">@*com.Slack:drawable/ic_back_24dp</item>
        <item name="*com.Slack:actionModeStyle">@*com.Slack:style/ActionModeTheme</item>
        <item name="*com.Slack:actionOverflowButtonStyle">@*com.Slack:style/Widget.ActionButton.Overflow</item>
        <item name="*com.Slack:alertDialogTheme">@*com.Slack:style/AlertDialogTheme</item>
        <item name="*com.Slack:cardViewStyle">@*com.Slack:style/SlackCardStyle</item>
        <item name="*com.Slack:colorAccent">@*com.Slack:color/colorAccent</item>
        <item name="*com.Slack:panelBackground">@*android:color/background_dark</item>
        <item name="*com.Slack:textAppearanceButton">@*com.Slack:style/TextAppearance.AppCompat.Button</item>
        <item name="*com.Slack:windowActionModeOverlay">true</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="SlackKit.Button.Large.White" parent="@*com.Slack:style/SlackKitButton.Large">
        <item name="android:textColor">@*com.Slack:color/selector_button_black</item>
        <item name="*com.Slack:backgroundTint">@*android:color/button_material_dark</item>
    </style>
    <style name="SlackKit.Button.Small.White" parent="@*com.Slack:style/SlackKitButton.Small">
        <item name="android:textColor">@*com.Slack:color/selector_button_black</item>
        <item name="*com.Slack:backgroundTint">@*android:color/button_material_dark</item>
    </style>
    <style name="StatusCardStyle">
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="*com.Slack:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
        <item name="*com.Slack:cardCornerRadius">3.0dip</item>
    </style>
    <style name="TransparentActivityTheme" parent="@*com.Slack:style/NoActionBarActivityTheme">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundTint">@*android:color/background_dark</item>
    </style>
    <style name="TransparentActivityTheme.Light" parent="@*com.Slack:style/NoActionBarActivityTheme">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundTint">@*android:color/background_dark</item>
    </style>
</resources>
