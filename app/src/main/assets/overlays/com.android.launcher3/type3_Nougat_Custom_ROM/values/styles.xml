<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Light.CustomOverscroll" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="Theme.Dark.CustomOverscroll" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="Settings" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseLauncherTheme" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Icon">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Icon.DeepShortcut" parent="@*com.android.launcher3:style/Icon">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:drawablePadding">@*com.android.launcher3:dimen/deep_shortcut_drawable_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">@*com.android.launcher3:dimen/bg_pill_height</item>
        <item name="android:paddingEnd">@*com.android.launcher3:dimen/deep_shortcut_padding_end</item>
        <item name="android:elevation">@*com.android.launcher3:dimen/deep_shortcuts_elevation</item>
        <item name="layoutHorizontal">true</item>
        <item name="iconSizeOverride">@*com.android.launcher3:dimen/deep_shortcut_icon_size</item>
    </style>
</resources>
