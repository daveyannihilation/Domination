<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@*com.google.android.apps.translate:drawable/bg_card_shadow_bottom" />
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@*com.google.android.apps.translate:dimen/card_radius" />
                    <solid android:color="@*com.google.android.apps.translate:color/card_pressed_background" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@*com.google.android.apps.translate:dimen/card_radius" />
                    <solid android:color="@*android:color/background_floating_material_dark" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:top="@*com.google.android.apps.translate:dimen/card_divider_height">
        <ripple android:color="@*com.google.android.apps.translate:color/card_pressed_background_dark">
            <item android:id="@*android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@*com.google.android.apps.translate:dimen/card_radius" />
                    <solid android:color="@*android:color/background_floating_material_dark" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
