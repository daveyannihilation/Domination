<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContinuousTranslationDialogTheme" parent="@*com.google.android.apps.translate:style/Theme.GoogleMaterial.Dark.Dialog.Alert">
        <item name="*com.google.android.apps.translate:colorAccent">@*com.google.android.apps.translate:color/google_blue300</item>
        <item name="*com.google.android.apps.translate:colorPrimary">@*android:color/primary_material_dark</item>
        <item name="*com.google.android.apps.translate:dialogCornerRadius">@*com.google.android.apps.translate:dimen/google_dialog_corner_radius</item>
    </style>
    <style name="ContinuousTranslationTheme" parent="@*com.google.android.apps.translate:style/Theme.GoogleMaterial.DayNight.NoActionBar">
        <item name="*com.google.android.apps.translate:alertDialogTheme">@*com.google.android.apps.translate:style/ContinuousTranslationDialogTheme</item>
        <item name="*com.google.android.apps.translate:colorAccent">@*com.google.android.apps.translate:color/google_blue300</item>
        <item name="*com.google.android.apps.translate:colorOnSurface">@*android:color/white</item>
        <item name="*com.google.android.apps.translate:dividerColor">@*android:color/transparent</item>
        <item name="*com.google.android.apps.translate:highLightColor">@*com.google.android.apps.translate:color/listen_high_light_color</item>
        <item name="*com.google.android.apps.translate:pickerIconColor">@*android:color/white</item>
        <item name="*com.google.android.apps.translate:pickerTextColor">@*android:color/white</item>
        <item name="*com.google.android.apps.translate:popupMenuStyle">@*com.google.android.apps.translate:style/ContinuousTranslationPopupMenu</item>
        <item name="*com.google.android.apps.translate:textColorPrimary">@*android:color/white</item>
        <item name="*com.google.android.apps.translate:tintColor">@*android:color/white</item>
    </style>
    <style name="ContinuousTranslationPopupMenu" parent="@*com.google.android.apps.translate:style/PopupMenu.Overlap">
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
    </style>
</resources>
