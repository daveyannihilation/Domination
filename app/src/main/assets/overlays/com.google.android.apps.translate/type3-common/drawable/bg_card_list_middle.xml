<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/background_floating_material_dark" />
        </shape>
    </item>
    <item android:top="@*com.google.android.apps.translate:dimen/card_divider_height">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@*com.google.android.apps.translate:color/card_pressed_background" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@*android:color/background_floating_material_dark" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:top="@*com.google.android.apps.translate:dimen/card_divider_height">
        <ripple android:color="@*com.google.android.apps.translate:color/card_pressed_background_dark">
            <item android:id="@*android:id/mask" android:drawable="@*android:color/white" />
        </ripple>
    </item>
</layer-list>
