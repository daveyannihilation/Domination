<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityThemeBase" parent="@*com.google.android.apps.recorder:style/Theme.GoogleMaterial.DayNight">
        <item name="android:windowBackground">@*android:color/primary_dark_material_dark</item>
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
        <item name="*com.google.android.apps.recorder:actionBarStyle">@*com.google.android.apps.recorder:style/TransparentActionBar</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@*com.google.android.apps.recorder:style/Theme.GoogleMaterial.DayNight.NoActionBar">
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
    </style>
    <style name="AppThemeBase" parent="@*com.google.android.apps.recorder:style/Theme.GoogleMaterial.DayNight">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
        <item name="*com.google.android.apps.recorder:actionBarStyle">@*com.google.android.apps.recorder:style/TransparentActionBar</item>
    </style>
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabText" parent="@*android:style/Widget.Material.ActionBar.TabText" />
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabView" parent="@*android:style/Widget.Material.ActionBar.TabView" />
    <style name="Base.Widget.AppCompat.Light.PopupMenu" parent="@*android:style/Widget.Material.PopupMenu" />
    <style name="CardView" parent="@*com.google.android.apps.recorder:style/Base.CardView">
        <item name="*com.google.android.apps.recorder:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="OpenSearchBarStyle" parent="@*com.google.android.apps.recorder:style/Widget.GoogleMaterial.OpenSearchBar">
        <item name="android:backgroundTint">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="OpenSearchViewColor">
        <item name="*com.google.android.apps.recorder:colorSurface">@*android:color/background_dark</item>
    </style>
    <style name="Platform.V25.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar" />
    <style name="Theme.GoogleMaterial.Light" parent="@*com.google.android.apps.recorder:style/Base.Theme.GoogleMaterial.Dark">
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="Theme.GoogleMaterial.Light.BottomSheetDialog" parent="@*com.google.android.apps.recorder:style/Base.Theme.GoogleMaterial.Dark.BottomSheetDialog">
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@*android:color/transparent</item>
    </style>
</resources>
