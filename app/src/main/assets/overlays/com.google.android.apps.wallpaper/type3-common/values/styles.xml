<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.TextAppearance.AppCompat.Inverse" parent="@*com.google.android.apps.wallpaper:style/Base.TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Large.Inverse" parent="@*com.google.android.apps.wallpaper:style/Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Medium.Inverse" parent="@*com.google.android.apps.wallpaper:style/Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Small.Inverse" parent="@*com.google.android.apps.wallpaper:style/Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Subhead.Inverse" parent="@*com.google.android.apps.wallpaper:style/Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Title.Inverse" parent="@*com.google.android.apps.wallpaper:style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse" parent="@*com.google.android.apps.wallpaper:style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@*com.google.android.apps.wallpaper:dimen/abc_text_size_subtitle_material_toolbar</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" parent="@*com.google.android.apps.wallpaper:style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@*com.google.android.apps.wallpaper:dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light" />


    <style name="Widget.Design.BottomSheet.Modal" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.apps.wallpaper:behavior_peekHeight">auto</item>
        <item name="*com.google.android.apps.wallpaper:behavior_hideable">true</item>
        <item name="*com.google.android.apps.wallpaper:behavior_skipCollapsed">false</item>
    </style>

</resources>
