<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardView" parent="@*com.google.android.apps.wallpaper:style/Base.CardView">
        <item name="*com.google.android.apps.wallpaper:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>
    <style name="Platform.V25.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar" />
    <style name="WallpaperTheme" parent="@*com.google.android.apps.wallpaper:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.google.android.apps.wallpaper:colorControlActivated">@*android:color/white</item>
        <item name="*com.google.android.apps.wallpaper:colorControlNormal">@*com.google.android.apps.wallpaper:color/accent_color</item>
    </style>
    <style name="Widget.Design.BottomSheet.Modal" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="android:elevation">@*com.google.android.apps.wallpaper:dimen/design_bottom_sheet_modal_elevation</item>
        <item name="*com.google.android.apps.wallpaper:behavior_hideable">true</item>
        <item name="*com.google.android.apps.wallpaper:behavior_peekHeight">auto</item>
        <item name="*com.google.android.apps.wallpaper:behavior_skipCollapsed">false</item>
    </style>
</resources>
