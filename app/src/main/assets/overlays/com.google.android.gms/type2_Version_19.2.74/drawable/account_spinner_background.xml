<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2.0dip" />
                    <solid android:color="@*android:color/dim_foreground_light" />
                </shape>
            </item>
            <item android:drawable="@*com.google.android.gms:drawable/account_spinner_chevron" />
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2.0dip" />
                    <solid android:color="@*android:color/dim_foreground_light" />
                </shape>
            </item>
            <item android:drawable="@*com.google.android.gms:drawable/account_spinner_chevron" />
        </layer-list>
    </item>
    <item android:drawable="@*com.google.android.gms:drawable/account_spinner_chevron" />
</selector>
