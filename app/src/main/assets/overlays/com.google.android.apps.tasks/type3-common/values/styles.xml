<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomAppBar" parent="@*com.google.android.apps.tasks:style/Widget.GoogleMaterial.BottomAppBar">
        <item name="*com.google.android.apps.tasks:backgroundTint">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.apps.tasks:backgroundTintMode">src_over</item>
        <item name="*com.google.android.apps.tasks:fabCradleMargin">5.0dip</item>
        <item name="*com.google.android.apps.tasks:fabCradleRoundedCornerRadius">8.0dip</item>
    </style>
    <style name="DatePickerStyle" parent="@*android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@*com.google.android.apps.tasks:color/colorAccent</item>
        <item name="android:headerMonthTextAppearance">@*com.google.android.apps.tasks:style/DatePickerMonthTextAppearance</item>
    </style>
    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>
</resources>
