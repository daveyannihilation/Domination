<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomAppBar" parent="@*com.google.android.apps.tasks:style/Widget.GoogleMaterial.BottomAppBar">
        <item name="*com.google.android.apps.tasks:fabCradleMargin">5.0dip</item>
        <item name="*com.google.android.apps.tasks:fabCradleRoundedCornerRadius">8.0dip</item>
        <item name="*com.google.android.apps.tasks:backgroundTint">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.apps.tasks:backgroundTintMode">src_over</item>
    </style>
    <style name="Chip.Mail" parent="@*com.google.android.apps.tasks:style/Chip">
        <item name="android:maxWidth">@*com.google.android.apps.tasks:dimen/chip_source_max_width</item>
        <item name="*com.google.android.apps.tasks:chipBackgroundColor">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.apps.tasks:chipIconTint">@*com.google.android.apps.tasks:color/blueText</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="TaskLink">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff1976d2</item>
    </style>
    <style name="Widget.Design.BottomSheet.Modal" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.apps.tasks:behavior_peekHeight">auto</item>
        <item name="*com.google.android.apps.tasks:behavior_hideable">true</item>
        <item name="*com.google.android.apps.tasks:behavior_skipCollapsed">false</item>
        <item name="*com.google.android.apps.tasks:shapeAppearance">@null</item>
        <item name="*com.google.android.apps.tasks:shapeAppearanceOverlay">@null</item>
        <item name="*com.google.android.apps.tasks:enforceMaterialTheme">false</item>
        <item name="*com.google.android.apps.tasks:backgroundTint">@*android:color/background_floating_material_dark</item>
    </style>
</resources>
