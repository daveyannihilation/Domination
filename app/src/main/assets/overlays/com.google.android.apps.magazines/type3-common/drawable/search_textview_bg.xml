<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@*android:color/dim_foreground_light" />
                </shape>
            </item>
            <item android:bottom="1.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@*android:color/primary_material_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <solid android:color="@*android:color/primary_material_dark" />
        </shape>
    </item>
</selector>
