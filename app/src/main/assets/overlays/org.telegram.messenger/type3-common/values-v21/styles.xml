<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar.Transparent.TMessages.Start" parent="@*android:style/Widget.Material.ActionBar">
        <item name="android:background">#ff1976d2</item>
        <item name="android:title"></item>
        <item name="android:logo">@*org.telegram.messenger:drawable/transparent</item>
    </style>
    <style name="MyTextViewStyle" parent="@*android:style/Widget.Material.TextView" />
    <style name="Theme.TMessages" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@*org.telegram.messenger:style/Theme.TMessages.ListView</item>
        <item name="android:textViewStyle">@*org.telegram.messenger:style/MyTextViewStyle</item>
        <item name="android:textColorHighlight">#60ffffff</item>
        <item name="android:itemTextAppearance">@*org.telegram.messenger:style/ActionBar.Transparent.TMessages.Item</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:listChoiceBackgroundIndicator">@*org.telegram.messenger:drawable/list_selector_ex</item>
        <item name="android:alertDialogTheme">@*org.telegram.messenger:style/Theme.TMessages.Dialog.Alert</item>
        <item name="android:datePickerStyle">@*org.telegram.messenger:style/Theme.TMessages.DatePicker</item>
        <item name="android:calendarViewStyle">@*org.telegram.messenger:style/Theme.TMessages.CalendarView</item>
        <item name="android:actionBarItemBackground">@*org.telegram.messenger:drawable/bar_selector_style</item>
        <item name="android:colorControlActivated">#ff1976d2</item>
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#33000000</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:timePickerStyle">@*org.telegram.messenger:style/Theme.TMessages.TimePicker</item>
        <item name="android:timePickerDialogTheme">@*org.telegram.messenger:style/Theme.TMessages.Dialog.Alert</item>
        <item name="android:datePickerDialogTheme">@*org.telegram.messenger:style/Theme.TMessages.Dialog.Alert</item>
	    <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="Theme.TMessages.BorderLessButton" parent="@*android:style/Widget.Material.ButtonBar.AlertDialog">
        <item name="android:textColor">#ff1976d2</item>
    </style>
    <style name="Theme.TMessages.DatePicker" parent="@*android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">#ff1976d2</item>
    </style>
    <style name="Theme.TMessages.Dialog.Alert" parent="@*android:style/Theme.Material.Dialog.Alert">
        <item name="android:colorControlActivated">#ff1976d2</item>
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorAccent">#ff1976d2</item>
    </style>
    <style name="Theme.TMessages.ListView" parent="@*android:style/Widget.Material.ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@*android:color/transparent</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>
    <style name="Theme.TMessages.PopupNotification" parent="@*org.telegram.messenger:style/Theme.TMessages">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimaryDark">#99000000</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
    </style>
    <style name="Theme.TMessages.Start" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textViewStyle">@*org.telegram.messenger:style/MyTextViewStyle</item>
        <item name="android:actionBarStyle">@*org.telegram.messenger:style/ActionBar.Transparent.TMessages.Start</item>
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
    </style>
    <style name="Theme.TMessages.TimePicker" parent="@*android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">#ff1976d2</item>
    </style>
</resources>
