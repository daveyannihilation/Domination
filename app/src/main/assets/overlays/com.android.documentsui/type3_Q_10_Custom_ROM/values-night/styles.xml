<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DocumentsTheme" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:colorBackground">@*android:color/primary_dark_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listDivider">@null</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateUnspecified</item>
        <item name="android:actionModeBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:actionBarSize">@*com.android.documentsui:dimen/action_bar_size</item>
        <item name="android:strokeColor">@*android:color/white</item>
        <item name="android:colorControlActivated">@*com.android.documentsui:color/primary</item>
        <item name="android:colorControlHighlight">@*android:color/secondary_text_default_material_dark</item>
        <item name="android:colorPrimary">@*com.android.documentsui:color/primary</item>
        <item name="android:colorAccent">@*com.android.documentsui:color/primary</item>
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorBackgroundFloating">@*android:color/background_floating_material_dark</item>
        <item name="android:colorSecondary">@*com.android.documentsui:color/secondary</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="Platform.V11.AppCompat.Light" parent="@*android:style/Theme.Holo" />
    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>
    <style name="Platform.V25.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar" />
</resources>
