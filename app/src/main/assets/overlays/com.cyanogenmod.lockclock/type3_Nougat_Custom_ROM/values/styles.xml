<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Main" parent="@*android:style/Theme.DeviceDefault.Light">
        <!-- Main theme colors -->
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:colorAccent">#ff1976d2</item>
        <!-- One can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <!-- App behaviour -->
        <item name="android:fadeScrollbars">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#ff0d47a1</item>
    </style>

    <style name="Theme.AlertDialog" parent="@*android:style/Theme.Dialog.Alert">
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorAccent">#ff1976d2</item>
    </style>
</resources>
