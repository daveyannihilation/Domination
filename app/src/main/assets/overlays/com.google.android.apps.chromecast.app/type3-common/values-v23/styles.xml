<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NonTransparentStatusBar" parent="@*com.google.android.apps.chromecast.app:style/AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.google.android.apps.chromecast.app:windowActionBar">false</item>
        <item name="*com.google.android.apps.chromecast.app:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
    </style>
    <style name="CardView" parent="@*com.google.android.apps.chromecast.app:style/Base.CardView">
        <item name="*com.google.android.apps.chromecast.app:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="RemoteControlCameraTheme">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.google.android.apps.chromecast.app:windowActionBar">false</item>
        <item name="*com.google.android.apps.chromecast.app:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
        <item name="*com.google.android.apps.chromecast.app:colorControlNormal">@*android:color/white</item>
    </style>
</resources>
