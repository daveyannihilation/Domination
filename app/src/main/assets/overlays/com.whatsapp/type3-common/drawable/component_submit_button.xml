<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="15.0dip" />
            <stroke android:width="1.0dip" android:color="#ff1976d2" />
            <gradient android:startColor="#ff1976d2" android:endColor="#ff1976d2" android:angle="-90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="15.0dip" />
            <stroke android:width="1.0dip" android:color="#ff1976d2" />
            <solid android:color="#ff1976d2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15.0dip" />
            <stroke android:width="1.0dip" android:color="#ff1976d2" />
            <gradient android:startColor="#ff1976d2" android:endColor="#ff1976d2" android:angle="-90.0" />
        </shape>
    </item>
</selector>
