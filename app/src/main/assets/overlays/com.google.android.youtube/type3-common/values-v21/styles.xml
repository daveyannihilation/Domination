<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardboardDialogTheme" parent="@*android:style/Theme.Material.Dialog" />

    <style name="QuantumFloatingActionButton">
        <item name="android:elevation">4.0dip</item>
        <item name="*com.google.android.youtube:quantumFabColor">@*com.google.android.youtube:color/quantum_googred</item>
        <item name="*com.google.android.youtube:quantumFabRippleColor">@*android:color/ripple_material_dark</item>
        <item name="*com.google.android.youtube:quantumSize">normal</item>
    </style>

    <style name="Base.Widget.AppCompat.Light.ActionBar.TabView" parent="@*android:style/Widget.Material.ActionBar.TabView" />
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabText" parent="@*android:style/Widget.Material.ActionBar.TabText" />

    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" parent="@*android:style/TextAppearance.Material.Widget.ActionBar.Title" />
    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse" parent="@*android:style/TextAppearance.Material.Widget.ActionBar.Subtitle" />
    <style name="Base.Widget.AppCompat.Light.PopupMenu" parent="@*android:style/Widget.Material.PopupMenu" />

    <style name="Base.TextAppearance.AppCompat.Inverse" parent="@*android:style/TextAppearance.Material" />
    <style name="Base.TextAppearance.AppCompat.Large.Inverse" parent="@*android:style/TextAppearance.Material.Large" />
    <style name="Base.TextAppearance.AppCompat.Medium.Inverse" parent="@*android:style/TextAppearance.Material.Medium" />
    <style name="Base.TextAppearance.AppCompat.Small.Inverse" parent="@*android:style/TextAppearance.Material.Small" />

    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="InfoCards">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="*com.google.android.youtube:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="InfoCardsWatchNext">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="*com.google.android.youtube:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="GvrDialogTheme" parent="@*android:style/Theme.Material.Dialog" />

    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>


    <style name="Platform.ThemeOverlay.AppCompat" parent="">
        <item name="android:colorControlNormal">@*android:color/white</item>
        <item name="android:colorControlActivated">@*android:color/white</item>
        <item name="android:colorButtonNormal">@*android:color/white</item>
        <item name="android:colorControlHighlight">@*android:color/white</item>
        <item name="android:colorPrimary">@*android:color/primary_material_dark</item>
        <item name="android:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
    </style>
    <style name="Base.V21.ThemeOverlay.YouTube.ActionBar.Light" parent="@*com.google.android.youtube:style/Base.ThemeOverlay.YouTube.ActionBar.Dark">
        <item name="android:colorControlNormal">@*android:color/white</item>
    </style>
</resources>
