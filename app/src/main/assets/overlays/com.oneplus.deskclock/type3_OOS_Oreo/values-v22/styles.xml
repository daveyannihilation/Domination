<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DeskClock" parent="@*android:style/Theme.Material.Settings">
        <item name="android:buttonStyle">?android:borderlessButtonStyle</item>
        <item name="android:windowBackground">@*com.oneplus.deskclock:color/default_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@*com.oneplus.deskclock:style/DeskClockDropDownListView</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@*com.oneplus.deskclock:style/DeskClockBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarTabBarStyle">@*com.oneplus.deskclock:style/OPDeskClockTabBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@*com.oneplus.deskclock:style/Clock.Oneplus.Widget.Material.ActionButton.Overflow</item>
        <item name="android:textAppearanceLargePopupMenu">@*com.oneplus.deskclock:style/Oneplus.TextAppearance.Material.Menu.Dark</item>
        <item name="android:alertDialogTheme">@*com.oneplus.deskclock:style/MyTheme.AlertDialog</item>
        <item name="android:colorControlActivated">@*com.oneplus.deskclock:color/white</item>
        <item name="android:colorPrimary">@*com.oneplus.deskclock:color/default_background</item>
        <item name="android:actionOverflowMenuStyle">@*com.oneplus.deskclock:style/Clock.Oneplus.Widget.Material.PopupMenu.Overflow</item>
        <item name="android:statusBarColor">@*com.oneplus.deskclock:color/default_background</item>
        <item name="android:navigationBarColor">@*com.oneplus.deskclock:color/op_navigation_bar_color</item>
        <item name="android:toolbarStyle">@*com.oneplus.deskclock:style/Clock.Oneplus.Widget.Material.Toolbar</item>
        <item name="android:windowLightStatusBar">@*com.oneplus.deskclock:bool/deskclock_statusbar_black_conent</item>
        <item name="*com.oneplus.deskclock:onePlusPrimaryColor">@*com.oneplus.deskclock:color/op_primary_color</item>
    </style>
</resources>

