<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background_dark">#ff000000</color>
    <color name="background_floating_material_dark">#ff111111</color>
    <color name="background_material_dark">#ff000000</color>
    <color name="button_material_dark">#ff202020</color>
    <color name="legacy_primary">#ff202020</color>
    <color name="primary_dark_material_dark">#ff000000</color>
    <color name="primary_material_dark">#ff111111</color>
    <color name="primary_text_leanback_light">#ff000000</color>
    <color name="secondary_text_leanback_light">#ff111111</color>
    <style name="Theme.DeviceDefault.Light" parent="@*android:style/Theme.Material">
        <item name="backgroundDimAmount">0.7</item>
        <item name="*android:dialogCornerRadius">@*android:dimen/config_dialogCornerRadius</item>
        <item name="*android:buttonCornerRadius">@*android:dimen/config_buttonCornerRadius</item>
        <item name="*android:colorProgressBackgroundNormal">@*android:color/config_progress_background_tint</item>
        <item name="*android:colorBackgroundFloating">@*android:color/background_floating_material_dark</item>
        <item name="*android:progressBarCornerRadius">@*android:dimen/config_progressBarCornerRadius</item>
        <item name="*android:textAppearanceListItem">@*android:style/TextAppearance.DeviceDefault.ListItem</item>
        <item name="*android:textAppearanceListItemSmall">@*android:style/TextAppearance.DeviceDefault.ListItem</item>
        <item name="*android:textAppearanceListItemSecondary">@*android:style/TextAppearance.DeviceDefault.ListItemSecondary</item>
        <item name="*android:colorPopupBackground">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="Theme.Material.Settings" parent="@*android:style/Theme.Material">
        <item name="*android:homeAsUpIndicator">@*android:drawable/ic_ab_back_material_settings</item>
        <item name="*android:presentationTheme">@*android:style/Theme.Material.Settings.Dialog.Presentation</item>
        <item name="*android:colorPrimary">@*android:color/primary_material_dark</item>
        <item name="*android:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
        <item name="*android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="*android:colorSecondary">@*android:color/button_material_dark</item>
        <item name="*android:panelMenuListTheme">@*android:style/Theme.Material.Settings.CompactMenu</item>
        <item name="*android:searchDialogTheme">@*android:style/Theme.Material.Settings.SearchBar</item>
        <item name="*android:colorControlNormal">@*android:color/white</item>
        <item name="*android:colorControlActivated">@*android:color/accent_material_dark</item>
    </style>
</resources>
