    <style name="Base.Widget.AppCompat.Light.PopupMenu" parent="@*android:style/Widget.Material.PopupMenu" />
    <style name="BaseMusicActivityTheme" parent="@*com.google.android.music:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@*android:color/primary_dark_material_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:gridViewStyle">@*com.google.android.music:style/MusicGridView</item>
        <item name="android:listViewStyle">@*com.google.android.music:style/MusicListView</item>
        <item name="android:colorPrimary">@*android:color/primary_material_dark</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="*com.google.android.music:drawerArrowStyle">@*com.google.android.music:style/MusicDrawerArrowStyle</item>
        <item name="*com.google.android.music:windowActionBarOverlay">true</item>
        <item name="*com.google.android.music:actionBarPopupTheme">@*com.google.android.music:style/ThemeOverlay.AppCompat.Light</item>
        <item name="*com.google.android.music:actionBarDivider">@null</item>
        <item name="*com.google.android.music:dialogTheme">@*com.google.android.music:style/MusicDialogTheme</item>
        <item name="*com.google.android.music:selectableItemBackground">@*com.google.android.music:drawable/white_highlight</item>
        <item name="*com.google.android.music:colorPrimary">@*com.google.android.music:color/app_color_primary</item>
        <item name="*com.google.android.music:colorPrimaryDark">@*com.google.android.music:color/app_color_secondary</item>
        <item name="*com.google.android.music:colorAccent">@*com.google.android.music:color/app_color_primary</item>
        <item name="*com.google.android.music:alertDialogTheme">@*com.google.android.music:style/MusicDialogTheme</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
    <style name="FsiMessageActionButton" parent="@*com.google.android.music:style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@*com.google.android.music:drawable/fsi_action_button_background_selector</item>
        <item name="android:paddingTop">@*com.google.android.music:dimen/default_padding_large</item>
        <item name="android:paddingBottom">@*com.google.android.music:dimen/default_padding_large</item>
        <item name="android:layout_marginBottom">@*com.google.android.music:dimen/default_padding</item>
        <item name="android:minWidth">@*com.google.android.music:dimen/fsi_action_button_min_width</item>
        <item name="android:minHeight">@*com.google.android.music:dimen/fsi_action_button_min_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@*com.google.android.music:font/roboto_medium_family</item>
        <item name="android:paddingStart">@*com.google.android.music:dimen/default_padding_large_plus</item>
        <item name="android:paddingEnd">@*com.google.android.music:dimen/default_padding_large_plus</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="MusicActivityTheme.Launcher" parent="@*com.google.android.music:style/MusicActivityTheme">
        <item name="android:windowBackground">@*com.google.android.music:drawable/splashscreen_logo</item>
        <item name="android:colorPrimaryDark">@*android:color/primary_text_leanback_light</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@*android:color/primary_text_leanback_light</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>
    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>
    <style name="PlayDrawerSelectedText" parent="@*com.google.android.music:style/PlayDrawerBaseText">
        <item name="android:background">#ff555555</item>
        <item name="android:foreground">@*com.google.android.music:drawable/play_highlight_overlay_light</item>
    </style>
    <style name="Theme.AppInvite.Preview.Base" parent="@*android:style/Theme.Material.DialogWhenLarge.NoActionBar" />
    <style name="Tutorial.ProgressBar.WhiteSpinner" parent="@*com.google.android.music:style/Tutorial.ProgressBar">
        <item name="android:indeterminateTint">#ffffffff</item>
    </style>
