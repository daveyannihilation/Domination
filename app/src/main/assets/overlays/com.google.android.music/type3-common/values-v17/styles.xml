    <style name="Upsell.Button.Companion" parent="@*com.google.android.music:style/Upsell.Button">
        <item name="android:textSize">@*com.google.android.music:dimen/companion_upsell_button_text_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@*com.google.android.music:drawable/companion_upsell_blue_button_bg</item>
        <item name="android:paddingLeft">@*com.google.android.music:dimen/companion_upsell_button_padding</item>
        <item name="android:paddingRight">@*com.google.android.music:dimen/companion_upsell_button_padding</item>
        <item name="android:paddingStart">@*com.google.android.music:dimen/companion_upsell_button_padding</item>
        <item name="android:paddingEnd">@*com.google.android.music:dimen/companion_upsell_button_padding</item>
    </style>
    <style name="Upsell.Button.Preroll" parent="@*com.google.android.music:style/Upsell.Button">
        <item name="android:textSize">@*com.google.android.music:dimen/upsell_preroll_button_text_size</item>
        <item name="android:textColor">@*com.google.android.music:color/upsell_preroll_button_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@*android:color/button_material_dark</item>
        <item name="android:paddingLeft">@*com.google.android.music:dimen/upsell_preroll_button_padding</item>
        <item name="android:paddingRight">@*com.google.android.music:dimen/upsell_preroll_button_padding</item>
        <item name="android:paddingStart">@*com.google.android.music:dimen/upsell_preroll_button_padding</item>
        <item name="android:paddingEnd">@*com.google.android.music:dimen/upsell_preroll_button_padding</item>
