<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialerAlertDialogTheme" parent="@*android:style/Theme.Material.Dialog">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:colorAccent">#ff1976d2</item>
    </style>
    <style name="Dialpad_LightTransparent">
        <item name="*com.android.phone:dialpad_text_color">#ffffffff</item>
        <item name="*com.android.phone:dialpad_text_color_primary">#ffffffff</item>
        <item name="*com.android.phone:dialpad_text_color_secondary">#ffdddddd</item>
        <item name="*com.android.phone:dialpad_icon_tint">@*com.android.phone:color/dialpad_icon_tint_dark</item>
        <item name="*com.android.phone:dialpad_voicemail_tint">@*com.android.phone:color/dialpad_icon_tint_dark</item>
        <item name="*com.android.phone:dialpad_background">@*android:color/transparent</item>
        <item name="*com.android.phone:dialpad_separator_color">@*com.android.phone:color/dialpad_icon_tint_dark</item>
        <item name="*com.android.phone:dialpad_margin_style">@*com.android.phone:style/DialpadNoSpaceStyle</item>
        <item name="*com.android.phone:dialpad_delete_padding">1.0dip</item>
    </style>
    <style name="EmergencyDialerTheme" parent="@*android:style/Theme.DeviceDefault.Settings.Dialog">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:homeAsUpIndicator">@*com.android.phone:drawable/ic_back_arrow</item>
        <item name="android:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
        <item name="*com.android.phone:emergencyButtonBackgroundColor">#19202020</item>
        <item name="*com.android.phone:dialpadTheme">@*com.android.phone:style/Dialpad_DarkTransparent</item>
    </style>
    <style name="EmergencyDialerThemeDark" parent="@*com.android.phone:style/EmergencyDialerTheme">
        <item name="android:textColor">#ffffffff</item>
        <item name="emergencyButtonBackgroundColor">#19202020</item>
        <item name="*com.android.phone:dialpadTheme">@*com.android.phone:style/Dialpad_LightTransparent</item>
    </style>
    <style name="Empty" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="SettingsLight" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffdddddd</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@*com.android.phone:style/DialtactsActionBarStyle</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:actionOverflowButtonStyle">@*com.android.phone:style/DialtactsActionBarOverflow</item>
        <item name="android:homeAsUpIndicator">@*com.android.phone:drawable/ic_back_arrow</item>
        <item name="android:actionMenuTextColor">#ffffffff</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
    </style>
    <style name="SimImportTheme" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@*com.android.phone:style/TelephonyActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@*com.android.phone:style/DialtactsActionBarOverflow</item>
        <item name="android:homeAsUpIndicator">@*com.android.phone:drawable/ic_back_arrow</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
    </style>
</resources>
