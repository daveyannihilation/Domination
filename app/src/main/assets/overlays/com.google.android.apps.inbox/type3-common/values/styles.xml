<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RecipientEditTextViewBase" parent="@*android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">?*android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@*com.google.android.apps.inbox:dimen/chip_height</item>
        <item name="android:popupBackground">@*android:color/secondary_text_leanback_light</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
    </style>
    <style name="Base.V7.Widget.AppCompat.EditText" parent="@*android:style/Widget.EditText">
        <item name="android:textAppearance">?*android:textAppearanceMedium</item>
        <item name="android:textColor">#ffbbbbbb</item>
        <item name="android:background">@*com.google.android.apps.inbox:drawable/abc_edit_text_material</item>
    </style>

    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light" />


    <style name="bt_BigTopAppTheme.ComposeActivity" parent="@*com.google.android.apps.inbox:style/bt_BigTopAppTheme">
        <item name="android:windowBackground">@*android:color/primary_text_leanback_light</item>
    </style>
    <style name="bt_BigTopAppTheme.ConversationViewActivity" parent="@*com.google.android.apps.inbox:style/bt_BigTopAppTheme">
        <item name="android:windowBackground">@*android:color/primary_text_leanback_light</item>
    </style>
    <style name="bt_AclFixerDetailsDialog" parent="@*com.google.android.apps.inbox:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@*android:color/secondary_text_leanback_light</item>
    </style>
    <style name="bt_SignInActivity_RootView">
        <item name="android:gravity">center</item>
        <item name="android:background">@*android:color/primary_text_leanback_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="bt_DialogTextView">
        <item name="android:textSize">@*com.google.android.apps.inbox:dimen/bt_dialog_text_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@*com.google.android.apps.inbox:dimen/bt_dialog_row_height</item>
        <item name="android:layout_marginLeft">@*com.google.android.apps.inbox:dimen/bt_dialog_side_margin</item>
        <item name="android:layout_marginRight">@*com.google.android.apps.inbox:dimen/bt_dialog_side_margin</item>
        <item name="android:editTextColor">#ffbbbbbb</item>
    </style>

    <style name="bt_DialogEditTextView">
        <item name="android:textSize">@*com.google.android.apps.inbox:dimen/bt_dialog_text_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@*com.google.android.apps.inbox:dimen/bt_dialog_row_height</item>
        <item name="android:layout_marginLeft">@*com.google.android.apps.inbox:dimen/bt_dialog_edit_text_side_margin</item>
        <item name="android:layout_marginRight">@*com.google.android.apps.inbox:dimen/bt_dialog_edit_text_side_margin</item>
        <item name="android:editTextColor">#ffbbbbbb</item>
    </style>

    <style name="bt_EditTextView" parent="@*android:style/Widget.EditText">
        <item name="android:editTextColor">#ff787878</item>
        <item name="android:textCursorDrawable">@*com.google.android.apps.inbox:drawable/bt_cursor</item>
    </style>






    <style name="AbstractVacationResponderComposeArea">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@*android:color/secondary_text_leanback_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>


    <style name="bt_CoreTlView_Item.Text" parent="@*com.google.android.apps.inbox:style/bt_CoreTlView_Item">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="bt_CoreTlView_Item.Text.NewBadge" parent="@*com.google.android.apps.inbox:style/bt_CoreTlView_Item.Text">
        <item name="android:textSize">@*com.google.android.apps.inbox:dimen/bt_item_list_top_line_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@*com.google.android.apps.inbox:drawable/bt_topic_badge_rounded_corners</item>
        <item name="android:paddingLeft">@*com.google.android.apps.inbox:dimen/bt_topic_items_new_badge_padding</item>
        <item name="android:paddingRight">@*com.google.android.apps.inbox:dimen/bt_topic_items_new_badge_padding</item>
        <item name="android:text">@*com.google.android.apps.inbox:string/bt_topic_item_new</item>
    </style>
    <style name="bt_CoreTlView_Item.Text.SnoozeStatus" parent="@*com.google.android.apps.inbox:style/bt_CoreTlView_Item.Text">
        <item name="android:textSize">@*com.google.android.apps.inbox:dimen/bt_item_list_snooze_status_size</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="bt_CoreTlView_Item.Text.Subtitle" parent="@*com.google.android.apps.inbox:style/bt_CoreTlView_Item.Text">
        <item name="android:textSize">@*com.google.android.apps.inbox:dimen/bt_item_list_subtitle_text_size</item>
        <item name="android:textColor">#ffdddddd</item>
    </style>


    <style name="bt_CoreTlView_Item.Text.Title" parent="@*com.google.android.apps.inbox:style/bt_CoreTlView_Item.Text">
        <item name="android:textSize">@*com.google.android.apps.inbox:dimen/bt_item_list_top_line_text_size</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

</resources>
