<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RecipientEditTextViewBase" parent="@*android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@*com.google.android.apps.inbox:dimen/chip_height</item>
        <item name="android:popupBackground">@*com.google.android.apps.inbox:color/background_floating_material_dark</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="bt_SnoozeDialogSpinner" parent="@*com.google.android.apps.inbox:style/Widget.AppCompat.Spinner">
        <item name="android:textSize">@*com.google.android.apps.inbox:dimen/bt_dialog_text_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@*com.google.android.apps.inbox:dimen/bt_snooze_dialog_spinner_right_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@*com.google.android.apps.inbox:dimen/bt_dialog_row_height</item>
        <item name="android:layout_marginLeft">@*com.google.android.apps.inbox:dimen/bt_dialog_default_margin</item>
        <item name="android:layout_marginRight">@*com.google.android.apps.inbox:dimen/bt_dialog_default_margin</item>
        <item name="android:minHeight">@*com.google.android.apps.inbox:dimen/bt_dialog_row_height</item>
        <item name="android:paddingEnd">@*com.google.android.apps.inbox:dimen/bt_snooze_dialog_spinner_right_padding</item>
    </style>



    <style name="bt_CoreTlView_Item.Text" parent="@*com.google.android.apps.inbox:style/bt_CoreTlView_Item">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
